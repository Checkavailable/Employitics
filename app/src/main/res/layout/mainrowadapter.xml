<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="7dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingRight="10dp">
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/like"
            android:drawableBottom="@drawable/ic_favorite_outline_blue_grey_900_18dp"
            android:text="123"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:textAlignment="center"
            android:shadowColor="#ffffff"
            android:backgroundTint="#eeeeee"
            android:textSize="14dp"
            android:textColor="#263238" />

    </LinearLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_width="wrap_content">

            <TextView android:textColor="@android:color/primary_text_light"
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:fontFamily="sans-serif-light"
                android:gravity="left|fill"
                android:layout_weight="1"
                android:layout_span="1"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hyphenationFrequency="full"
                android:breakStrategy="high_quality" />

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#dddddd"
                    android:id="@+id/date"
                    android:text="10 hours ago"
                    android:height="20sp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textSize="13sp"
                    android:layout_gravity="left|bottom" />

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#dddddd"
                    android:id="@+id/name"
                    android:text=" from Mike Makaha"
                    android:height="20sp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/ic_forum_grey_300_18dp"
                    android:foregroundGravity="bottom"
                    android:layout_gravity="left"
                    android:paddingLeft="7dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#dddddd"
                    android:id="@+id/comments"
                    android:text="14"
                    android:height="20sp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textSize="13sp"
                    android:gravity="bottom"
                    android:layout_gravity="left|bottom" />
            </LinearLayout>
    </TableLayout>
</LinearLayout>